<p id="notice"><%= notice %></p>

<h1>Listando Centros de costos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre centro</th>
      <th>Codigo centro</th>
      <th>Detalle centro</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @centrocostos.each do |centrocosto| %>
      <tr>
        <td><%= centrocosto.nombre_centro %></td>
        <td><%= centrocosto.codigo_centro %></td>
        <td><%= centrocosto.detalle_centro %></td>
        <td><%= link_to 'Ver', centrocosto %></td>
        <td><%= link_to 'Editar', edit_centrocosto_path(centrocosto) %></td>
        <td><%= link_to 'Eliminar', centrocosto, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

