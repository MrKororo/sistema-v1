<h1>Empresa</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Giro empresa</th>
      <th>Domicilio</th>
      <th>Email</th>
      <th>Contacto</th>
      <th>Website</th>
      <th>Rut empresa</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.nombre %></td>
        <td><%= empresa.giro_empresa %></td>
        <td><%= empresa.domicilio %></td>
        <td><%= empresa.email %></td>
        <td><%= empresa.contacto %></td>
        <td><%= empresa.website %></td>
        <td><%= empresa.rut_empresa %></td>
        <td><%= empresa.telefono %></td>
        <td><%= link_to 'Ver', empresa %></td>
        <td><%= link_to 'Editar', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Eliminar', empresa, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

